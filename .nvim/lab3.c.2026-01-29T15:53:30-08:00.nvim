#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
  char *buffer = NULL;
  size_t size;
  ssize_t string;

  while (1) {
    printf("Enter input: ");
    string = getline(&buffer, &size, stdin);
    if (string == -1) {
      perror("getline failed");
      exit(EXIT_FAILURE);
    }
    printf("%s", buffer);
  }
  free(buffer);
}
